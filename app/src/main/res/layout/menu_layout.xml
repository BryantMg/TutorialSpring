<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a9eaa8"
    tools:context=".MenuActivity"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text=" Spring \nFramework"
        android:textColor="#c1d9f2"
        android:background="#119421"
        />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/springlogo"
        android:scaleType="centerInside"
        android:background="@drawable/springlogo"
        android:layout_gravity="center"
        android:layout_margin="@dimen/fab_margin"
        android:onClick="temario"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capitulos"
        android:layout_gravity="center"
        android:textColor="#000"
        />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="40dp"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >


            <ImageButton
                android:id="@+id/btn_video"
                android:layout_width="90px"
                android:layout_height="90px"
                android:background="@drawable/videos"
                android:onClick="videos"
                android:paddingLeft="100px"
                android:layout_marginLeft="30dp"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Videos de Spring"
                android:textColor="#000"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="40dp"
            >

            <ImageButton
                android:id="@+id/btn_avance"
                android:layout_width="90px"
                android:layout_height="90px"
                android:background="@drawable/grafic"
                android:onClick="avance"
                android:paddingLeft="100px"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avances"
                android:textColor="#000"
                />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="45dp"
            >
    <ImageButton
        android:id="@+id/btn_config"
        android:layout_width="90px"
        android:layout_height="90px"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/configuracion"
        android:onClick="configuracion"
        android:paddingLeft="100px"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Configuración"
        android:textColor="#000"
        />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="45dp"
            >
            <ImageButton
                android:id="@+id/btn_audio"
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/audio"
                android:onClick="audio"
                android:paddingLeft="100px"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Relajate"
                android:textColor="#000"
                />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="55dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <ImageButton
                android:id="@+id/btn_comen"
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/comment"
                android:onClick="correo"
                android:paddingLeft="100px"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comentarios"
                android:textColor="#000"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="40dp"
            >

            <ImageButton
                android:id="@+id/btn_about"
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/about"
                android:onClick="acercaDe"
                android:paddingLeft="100px"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acerca de"
                android:textColor="#000"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="55dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <ImageButton
                android:id="@+id/btn_utileries"
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/utilities"
                android:onClick="utilerias"
                android:paddingLeft="100px"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Utilerias"
                android:textColor="#000"
                android:paddingLeft="18dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="40dp"
            >

            <ImageButton
                android:id="@+id/btn_juegos"
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/games"
                android:onClick="juego"
                android:paddingLeft="100px"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juegos"
                android:textColor="#000"
                android:paddingLeft="18dp"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_videoUtng"
        android:layout_width="90px"
        android:layout_height="90px"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/universit"
        android:onClick="utngpag"
        android:paddingLeft="100px"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Información Institucional"
        android:layout_gravity="center"
        android:textColor="#000"
        />





</LinearLayout>
    </ScrollView>