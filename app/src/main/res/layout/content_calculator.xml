<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f97815">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/txv_display"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:padding="0dp"
        android:gravity="bottom|right"
        android:textSize="60sp"
        android:maxLines="2"
        android:maxLength="17" />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="7"
        android:id="@+id/btn7"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="#595959"
        android:layout_below="@+id/txv_display"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="8"
        android:id="@+id/btn8"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="#595959"
        android:layout_below="@+id/txv_display"
        android:layout_toRightOf="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="9"
        android:id="@+id/btn9"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="#595959"
        android:layout_alignBottom="@+id/btn8"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="5"
        android:id="@+id/btn5"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="#595959"
        android:layout_below="@+id/btn8"
        android:layout_toRightOf="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="6"
        android:id="@+id/btn6"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="#595959"
        android:layout_below="@+id/btn8"
        android:layout_toRightOf="@+id/btn5"
        android:layout_toEndOf="@+id/btn5"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="4"
        android:id="@+id/btn4"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="#595959"
        android:layout_below="@+id/btn7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="1"
        android:id="@+id/btn1"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="#595959"
        android:layout_below="@+id/btn5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="3"
        android:id="@+id/btn3"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="#595959"
        android:layout_alignBottom="@+id/btn1"
        android:layout_alignRight="@+id/btn6"
        android:layout_alignEnd="@+id/btn6"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="2"
        android:id="@+id/btn2"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="#595959"
        android:layout_alignTop="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="C"
        android:id="@+id/btnClear"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="#595959"
        android:onClick="onClickClear"
        android:layout_below="@+id/btn1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="0"
        android:id="@+id/btn0"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="#595959"
        android:onClick="onClickNumber"
        android:layout_below="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:layout_toEndOf="@+id/btn1" />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="="
        android:id="@+id/btnEqual"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="#595959"
        android:onClick="onClickEqual"
        android:layout_below="@+id/btn3"
        android:layout_toRightOf="@+id/btn2"
        android:layout_toEndOf="@+id/btn2" />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="+"
        android:id="@+id/btnPlus"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="#595959"
        android:layout_alignTop="@+id/btn9"
        android:layout_toRightOf="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="-"
        android:id="@+id/btnMinus"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="#595959"
        android:layout_below="@+id/btn9"
        android:layout_toRightOf="@+id/btn6"
        android:layout_toEndOf="@+id/btn6"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="x"
        android:id="@+id/btnMulti"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="#595959"
        android:layout_below="@+id/btnMinus"
        android:layout_alignLeft="@+id/btnMinus"
        android:layout_alignStart="@+id/btnMinus"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="%"
        android:id="@+id/btnDiv"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="#595959"
        android:onClick="onClickOperator"
        android:layout_below="@+id/btnMulti"
        android:layout_alignLeft="@+id/btnMulti"
        android:layout_alignStart="@+id/btnMulti" />


</RelativeLayout>