<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorBackground"
    >

    <ImageView
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:background="@drawable/springqu"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aqui puedes visualizar los videos sobre Spring para mayor comprension de los temas"
            android:id="@+id/txv_lista_audios"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
             />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/videos"
            android:id="@+id/miLista" />
    </LinearLayout>

</LinearLayout>
