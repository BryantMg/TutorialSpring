<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent" android:background="@color/colorBackground">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:background="@drawable/springlogo"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:id="@+id/imv_pal1" />

<LinearLayout
    android:id="@+id/lny_pal1"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="74dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Revisar"
    android:id="@+id/btnVerif"
    android:layout_above="@+id/lny_pal1"
    android:layout_centerHorizontal="true"
    android:background="@color/colorButton"
    />

</RelativeLayout>